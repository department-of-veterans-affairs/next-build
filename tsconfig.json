{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "paths": {
      "@/*": ["./src/*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": [
    "next-env.d.ts",
    "additional.d.ts",
    "src/**/*",
    "*.{ts|tsx|js|jsx}",
    "scripts/*",
    "test/*",
    ".storybook/*"
  ],
  "exclude": ["node_modules", "src/__tests__", "public/generated"],
  "typedocOptions": {
    "entryPoints": ["src/"],
    "exclude": [
      "**/**+(.test|.stories).ts",
      "**/**+(.test|.stories).tsx",
      "**/(templates|mocks)/**"
    ],
    "out": "typedocs",
    "entryPointStrategy": "expand",
    "readme": "./READMEs/typescript.md"
  }
}
