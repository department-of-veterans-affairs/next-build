{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "typeRoots": ["node_modules/@types"],
    "types": [
      "node",
      "jest",
      "cypress",
      "cypress-axe",
      "@testing-library/cypress"
    ],
    "paths": {
      "@/assets/*": ["assets/*"],
      "@/api/*": ["pages/api/*"],
      "@/data/*": ["data/*"],
      "@/hooks/*": ["hooks/*"],
      "@/lib/*": ["lib/*"],
      "@/mocks/*": ["mocks/*"],
      "@/pages/*": ["pages/*"],
      "@/stories/*": ["stories/*"],
      "@/templates/*": ["templates/*"],
      "@/types/*": ["types/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "additional.d.ts",
    "src/**/*",
    "*/*.{ts|tsx|js|jsx}",
    "scripts/*"
  ],
  "exclude": ["node_modules", "./src/__tests__", "public/generated"],
  "typedocOptions": {
    "entryPoints": ["src/"],
    "out": "docs",
    "entryPointStrategy": "expand",
    "readme": "none"
  }
}
